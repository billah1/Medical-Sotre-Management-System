void tradelist()
{
    char date[20],brand[20]; FILE *trade; int total,sellmoney=0,test=0;
    system("cls");
    gotoxy(20,2);
    printf("\xB2\xB2\xB2\xB2\xB2\xB2\xB2\xB2\xB2\xB2\xB2\xB2\xB2\xB2 TRADE LIST \xB2\xB2\xB2\xB2\xB2\xB2\xB2\xB2\xB2\xB2\xB2\xB2\xB2\xB2");
    gotoxy(24,4);
    printf("Enter the date to view the trade list: ");
    scanf("%s",date);
    trade=fopen("tradelist.txt","r");
    gotoxy(10,6);
    printf("Name\tAddress\tContact No.\tBrand\t     Quantity  Total\n");
    while(fscanf(trade,"%s %s %s %s %s %s %d",store.date,store.name,store.address,store.phonenumber,&store.quantity,&total)!=EOF)
    {
        if(strcmp(date,store.date)==0)
        {
            test=1;
            printf("\t%s\t%s\t%s\t%s\t%d\n",store.name,store.address,store.phonenumber,store.quantity,total);
            sellmoney=sellmoney+total;
        }
    }
    fclose(trade);
    if(test==0)
    {
        system("cls");
        gotoxy(20,10);
        printf("There is no sell in this date");
        getch();
        mainmenu();
    }
    printf("\n\t\t\t\tTotal sell Money in this Day: %d",sellmoney);
    printf("\n\n\t\t\tPress any key to go Main Menu....");
    getch();
   mainmenu();

}

