void exitpro()
{
    exit(0);
}

 mainmenu()
{
    system("cls");
    char a;
    gotoxy(20,2);
    printf("\xB2\xB2\xB2\xB2\xB2\xB2\xB2\xB2\xB2\xB2\xB2\xB2\xB2\xB2 MAIN MENU \xB2\xB2\xB2\xB2\xB2\xB2\xB2\xB2\xB2\xB2\xB2\xB2\xB2\xB2");
    gotoxy(28,4);
	printf("[1] Add Product");
	gotoxy(28,6);
	printf("[2] View Product List");
	gotoxy(28,8);
	printf("[3] Update Product details");
	gotoxy(28,10);
	printf("[4] Sell Product");
	gotoxy(28,12);
	printf("[5] Trade List");
	gotoxy(28,14);
	printf("[6] Delete Product");
	gotoxy(28,16);
	printf("[7] Exit Program");
	gotoxy(20,18);
    printf("\xB2\xB2\xB2\xB2\xB2\xB2\xB2\xB2\xB2\xB2\xB2\xB2\xB2\xB2\xB2\xB2\xB2\xB2\xB2\xB2\xB2\xB2\xB2\xB2\xB2\xB2\xB2\xB2\xB2\xB2\xB2\xB2\xB2\xB2\xB2\xB2\xB2\xB2\xB2");
    againchance:
    gotoxy(26,20);
    printf("Enter your choice: ");
    scanf("%c",&a);
    switch(a){
     case '1':addproduct();
            break;

     case '2':viewproduct();
            break;

     case '3':updateproduct();
            break;

     case '4':sellproduct();
            break;

     case '5':tradelist();
            break;

     case '6':deleteproduct();
            break;

     case '7':exitpro();
            break;
     default:gotoxy(23,23);
                printf("Wrong Keyword. Please try again....\a");
            goto againchance;
    }
}


