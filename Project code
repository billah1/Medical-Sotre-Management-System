void updateproduct()
{
    system("cls");
    int a,test=0,test1=0;   char ch[2],mod[10],cm[2]="y";
    FILE *fp,*ft;
    gotoxy(20,2);
    printf("\xB2\xB2\xB2\xB2\xB2\xB2\xB2\xB2\xB2\xB2\xB2\xB2\xB2\xB2 UPDATE PRODUCT \xB2\xB2\xB2\xB2\xB2\xB2\xB2\xB2\xB2\xB2\xB2\xB2\xB2\xB2");
