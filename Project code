#include<stdio.h> //For scanf,printf etc
#include<stdlib.h> // File Management
#include<conio.h> // Font color
#include<string.h> // String strcmp,strcpy
#include<windows.h> //Cursor Location

int passtime=0; //count the wrong password
struct info
{
    char category[15];
    int buyrate;
    int sellrate;
    char name[20];
    char date[20];
    char address[20];
    char phonenumber[20];
    int quantity;
}store;

COORD coord = {0, 0}; // Cursor

void gotoxy(int x, int y) //Cursor Location Function
{
        coord.X = x; coord.Y = y;
        SetConsoleCursorPosition(GetStdHandle(STD_OUTPUT_HANDLE), coord);
}
void password(int h)
{
 char passcode[10]="masum";

   system("cls");
   if(passtime==3)
   {
       system("cls");
       gotoxy(20,8);
       printf("The program will exit");
       gotoxy(17,10);
       printf("Please contact the Administrator");
       getche();
       system("cls");
       exit(0);
   }
   if(h == 0)
   {
     gotoxy(20,16);
	 printf("Incorrect Password. Input the password again\a");
	 passtime++;
	 gotoxy(20,13);
	 printf("You have remaining %d times",3-passtime);
   }
   char ch,pass[10];
   int i=0,j;
   gotoxy(20,2);
   printf("\xB2\xB2\xB2\xB2\xB2\xB2\xB2\xB2\xB2\xB2\xB2\xB2\xB2\xB2 PASSWORD PROTECTED \xB2\xB2\xB2\xB2\xB2\xB2\xB2\xB2\xB2\xB2\xB2\xB2\xB2\xB2");
   gotoxy(25,7);
   printf("Enter Password:");
   while(ch!=13)
   {
	ch=getch();

	if(ch!=13 && ch!=8){
	putch('*');
	pass[i] = ch;
	i++;
	}
   }
   pass[i] = '\0';
   if(strcmp(pass,passcode)==0)
   {

	gotoxy(22,9);
	printf("Password match");
	gotoxy(22,10);
	printf("LOADING");
	int i;
	for(i=0;i<6;i++)
    {
        Sleep(250);
        printf(">");
    }
    mainmenu();
   }
   else
   {
	 password(0);
   }
}
