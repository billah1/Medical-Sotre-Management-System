	gotoxy(25,16);
	printf("Enter your choice: ");
	scanf("%d",&a);
	while(a<1||a>5)
    {
        gotoxy(25,16);
        printf("Enter correct keyword: ");
        scanf("%d",&a);
    }
    switch (a)
    {
            case 1:
                    system("cls");
                    fp=fopen("napa.txt","r");
                    gotoxy(20,2);
                    printf("\xB2\xB2\xB2\xB2\xB2\xB2\xB2\xB2\xB2\xB2\xB2\xB2\xB2\xB2 NAPA \xB2\xB2\xB2\xB2\xB2\xB2\xB2\xB2\xB2\xB2\xB2\xB2\xB2\xB2");
                    gotoxy(22,4);
                    printf("Enter the medicine name: ");
                    scanf("%s",mod);
                    while(fscanf(fp,"%s %d %d %d",store.name,&store.buyrate,&store.sellrate,&store.quantity)!=EOF)
                    {
                        if(strcmp(store.name,mod)==0){
                            test=1;
                            }
                    }
                    fclose(fp);
                    if(test==1)
                    {
                        gotoxy(22,6);
                        printf("The %s product is available.",mod);
                        gotoxy(22,8);
                        printf("Are you want to sure to update [y/n]:");
                        scanf("%s",ch);
                        if(strcmp(cm,ch)==0)
                        {
                            fp=fopen("napa.txt","r");
                            ft=fopen("temp.txt","a");
                            while(fscanf(fp,"%s %d %d %d",store.name,&store.buyrate,&store.sellrate,&store.quantity)!=EOF)
                            {
                                if(strcmp(store.name,mod)!=0)
                                {
                                    fprintf(ft,"%s %d %d %d\n",store.name,store.buyrate,store.sellrate,store.quantity);
                                }
                            }
                            gotoxy(22,10);
                            printf("The medicine name is %s",mod);
                            gotoxy(22,12);
                            printf("Enter the medicine Buy rate: ");
                            scanf("%d",&store.buyrate);
                            gotoxy(22,16);
                            printf("Enter the medicine Sell rate: ");
                            scanf("%d",&store.sellrate);
                            gotoxy(22,18);
                            printf("Enter the medicine Quantity: ");
                            scanf("%d",&store.quantity);
                            fprintf(ft,"%s %d %d %d\n",mod,store.buyrate,store.sellrate,store.quantity);
                            fclose(fp);
                            fclose(ft);
                            remove("napa.txt");
                            rename("temp.txt","napa.txt");
                            test1=1;

                        }
                        else
                         mainmenu();
                    }
                    else
                    {
                        gotoxy(8,6);
                        printf("The %s medicine is not available.",mod);
                        gotoxy(8,8);
